<div id="page-content">
  <div class="mt-5 mb-5">
  <div class="container" id='form-container'>
  <div class="row justify-content-center">
    <div class="col col-lg-8">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class:"shadow p-3 pink-bg rounded display-4", local: true) do |f| %>
      <div class="text-center mt-4 text-white">
      <%= f.label(@user.new_record? ? "Create a new account" : "Edit your account", class:"mb-3") %>
      </div>
      <div class="form-group">
      <div class="row justify-content-center">
      <div class="col-sm-4">
      <% if @user.avatar.attached? %>
        <image src="<%=(url_for(@user.avatar))%>", style="height:100px; width:100px; border-radius:180px">
      <% else %>
        <%= gravatar_for @user, size: 100, class:"rounded-circle" %>
      <% end %>
      </div>
      <div class="form-group col-sm-8">
        <%= f.file_field :avatar, style:"font-size:0.2em;" %>
      </div>
      </div>
      </div>
      <div class="form-group row">
          <div class="col">
          <div , class="form-control shadow rounded">
          <%= f.select :gender, [
                                  ["Male"],
                                  ["Female"],
                                  ["Other"]
                                ], 
            prompt: 'Select your gender' %>
          </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col">
            <%= f.text_field :bio, class:"form-control shadow rounded", placeholder:'Write a small bio'%>
          </div>
        </div>
      <div class="form-group row">
        <div class="col">
          <%= f.text_field :firstname, class:"form-control shadow rounded mb-3", placeholder:'Enter your first name'%>  
          <%= f.text_field :lastname, class:"form-control shadow rounded", placeholder:'Enter your last name'%>
        </div>
      </div>
        <div class="form-group row">
          <div class="col">
            <%= f.text_field :username, class:"form-control shadow rounded", placeholder:'Enter a username'%>
          </div>
        </div>
        <div class="form-group row">
          <div class="col">
            <%= f.email_field :email, class:"form-control shadow rounded", placeholder:'Enter your email adress'%>
          </div>
        </div>
        <div class="form-group row">
          <div class="col">
            <%= f.password_field :password, class:"form-control shadow rounded", placeholder:'Choose a password'%>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"btn btn-lg", :style => "background-color:#DCFF2E", color: "black") %>
        </div>
      <% end %>
      <div class="mb-3">
        <%= link_to '[ Cancel and return to your profile ]', user_path(current_user), class:"text-white"%>
      </div>
    </div>
  </div>
</div>


  </div>   
</div>
