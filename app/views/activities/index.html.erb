<h1>This is the index</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @activities.each do |activity| %>
            <tr>
                <td><%= activity.title %></td>
                <td><%= activity.description %></td>
                <td><%= link_to 'Show', activity_path(activity) %></td>
                <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
                <td><%= link_to 'Delete', activity_path(activity), method: :delete, data: { confirm: "Are you sure?"} %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p>
    <%= link_to 'Create new activity', new_activity_path %> | <%= link_to 'Return Home', root_path %>
</p>