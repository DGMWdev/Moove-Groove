<div id="page-content">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 mt-4">
                <div class="card text-center shadow mb-5 pink-bg rounded">
                    <div class="card-header font-italic">
                        <% if @activity.avatar.attached? %>
                            <image src="<%=(url_for(@activity.avatar))%>", style="height:100px; width:100px; border-radius:180px">
                        <% end %>
                        <h2 class="text-center mt-4 text-white"><%= @activity.title %></h2>
                    </div>
                    <div class="card-body bg-white">
                        <p class="text-center mt-4">Name of the activity: <strong><%= @activity.name %></strong></p>
                        <p class="text-center mt-4">Activity duration: <strong><%= @activity.duration %> minute(s)</strong></p>
                        <p class="text-center mt-4">Distance traveled: <strong><%= @activity.distance %> km</strong></p>
                        <p class="text-center mt-4">Number of repetitions: <strong><%= @activity.repetitions %></strong></p>
                        <p class="text-center mt-4">Date of the activity: <strong><%= @activity.date %></strong></p>
                        <p class="card-text text-left">Description:</p>
                        <p class="card-text text-left font-italic"><%= @activity.description %></p>
                        
                            
                        </div>
                        <div class="card-footer text-white">
                        <% if logged_in? && (@activity.user == current_user || current_user.admin?) %>
                                <%= link_to "", edit_activity_path(@activity), class:"btn btn-light far fa-edit"%>
                                <%= link_to "", activity_path(@activity), class:"btn btn-light far fa-trash-alt", method: :delete, data: { confirm: "Are you sure?" }%>
                            <% end %> <br/>
                            <br/>
                            <small>
                                Created <%= time_ago_in_words(@activity.created_at) %> ago,
                                edited <%= time_ago_in_words(@activity.updated_at) %> ago
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
